<h2>Combis</h2>


<table class="table table-striped">
		<thead class="thead">
		<tr>
			<th>Patente</th>
			<th>Tipo</th>
			<th>Asientos</th>

		
			
		</tr>
		</thead>
		
		<% @bus.each do |b| %>
		
			<tr>
				<td><%= link_to b.patente, bus_path(b)  %>  </td>
				<td><%= b.tipo  %>  </td>
				<td><%= b.asientos  %>  </td>
				
			
					<td><%= button_to 'Eliminar', b , method: :delete, data: { confirm: 'Esta seguro ?' }, class: "btn btn-danger"%></td>
					<td><%= link_to 'Editar', edit_bus_path(b), class: "btn btn-primary" %></td>
			
			</tr>
		<% end %>

	</table>	

	

	<h4><%= link_to 'Nueva Combi', new_bus_path, class:"btn btn-primary" %></h4>