<h1>Resultados de busqueda</h1>


<% if @search.buscar.empty? %>

	<p> No hay coincidencias</p>
<% else %>

<table class="table table-striped">
		<thead class="thead">
		<tr>
			<th>Ruta</th>
			<th>Fecha</th>
			<th>ID Viaje</th>
			
		</tr>
		</thead>
		<% @search.buscar.each do |s| %>
		<tr>
			<td><%= s.route.origin_destination %>  </td>
			<td><%= s.horario %> </td>
			<td><%= s.id %>  </td>
			<td><%= link_to 'Seleccionar', "" , class: "btn btn-danger"%></td>
			
			

		</tr>
		<% end %>

	</table>	

	

<% end %>
<%= link_to 'Volver', trips_path , class: "btn btn-primary"%>

