<%= form_with(model: additional, local: true) do |form| %>
  <% if additional.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(additional.errors.count, "errores") %> impidieron que se guarde el extra:</h2>

      <ul>
        <% additional.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.label :Nombre %>
    <%= form.text_field :nombre %>
  </div>
  <div class="field">
    <%= form.label :Stock %>
    <%= form.number_field :stock %>
  </div>
  <div class="field">
    <%= form.label :Precio %>
    <%= form.number_field :precio %>
  </div>
  

  
    <%= form.submit "Guardar", class:"btn btn-danger" %>
    <%= link_to 'Volver', additionals_path , class:"btn btn-primary" %>
  
<% end %>