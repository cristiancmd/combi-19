<%= form_with(model: city, local: true) do |form| %>
  <% if city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(city.errors.count, "errores") %> impidieron que se guarde la ciudad:</h2>

      <ul>
        <% city.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>
  

  <div class="actions">
    <%= form.submit "Guardar", class: 'btn btn-danger' %>
    <%= link_to 'Volver', cities_path, class: 'btn btn-primary' %>
  </div>
<% end %>