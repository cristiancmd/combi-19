    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "errores") %> impidieron que se genere su orden:</h2>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



